<RecordingSetup>
<recordingStorages>
    <storage name="s6">
        <folder>data_s6</folder> <!-- we use relative folder names - usually, this will be a full path -->
    </storage>
</recordingStorages>
<tasks>
    <!-- This sample is similar to Sample1, but exporting to TIFF is done later,
         session with temporarry data in storage is saved to file "sample6-recorded.xirecsession".
         Parameter exportImageFormat defines the resulting image format when opening xirecsession
         in CamTool or while exporting to TIFF. -->   
    <cameraTask frameCount="10" recordingStorageName="s6" saveSession="sample6-recorded" exportImageFormat="XI_RGB24">
        <setCameraParam name="XI_PRM_EXPOSURE" value="200000"/>
    </cameraTask>
</tasks>
</RecordingSetup>

<RecordingSetup>
<recordingStorages>
    <!-- Storage section is used to define temporary data storage for acquisition.
         If preformance is critical, use the folders on fastest drives. You can also 
         use multiple drives simultaneously to increase write speed. -->
    <storage name="s1">
        <folder>data_s1</folder> <!-- we use relative folder names - usually, this will be a full path -->
    </storage>
</recordingStorages>
<tasks>
    <!-- Connect to the camera connected to this computer, acquire 10 frames to storage s1,
         and save them as RGB TIFFs to folder "output" -->
    <cameraTask frameCount="10" recordingStorageName="s1" exportImageFormat="XI_RGB24" exportFolder="output">
        <!-- Set exposure to 200 ms -->
        <setCameraParam name="XI_PRM_EXPOSURE" value="200000"/>
        <!-- Set white balance. You can use "XI_PRM_WB_KR" or "wb_kr" here. -->
        <setCameraParam name="XI_PRM_WB_KR" value="1.5"/>
        <setCameraParam name="XI_PRM_WB_KG" value="1.0"/>
        <setCameraParam name="XI_PRM_WB_KB" value="2.0"/>
        <!-- Set downsampling. You can use enum values too, e.g. "XI_DWN_1x1" for parameter value "1" -->
        <setCameraParam name="XI_PRM_DOWNSAMPLING" value="XI_DWN_1x1"/>
    </cameraTask>
</tasks>
</RecordingSetup>
